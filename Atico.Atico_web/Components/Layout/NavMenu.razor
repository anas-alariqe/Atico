@using Atico.Atico_web.Components.Controls.Models
@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-light bg-light my-0 py-0">
        <div class="container-fluid row justify-content-center">

            <div class="justify-content-center nav_box nav_box_radius">
                <a class="navbar-brand " href="#">
                        <img class="nav-logo" src="logo-02[1].png" alt="Logo">
                </a>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse  " id="navbarNav">                 
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        @foreach (var navItem in NavItems)
                        {
                            <li class="nav-item @(IsActive(navItem.Href) ? "active" : "")">
                                <NavLink class="nav-link" href="@navItem.Href" @onclick="(() => SetActive(navItem))">
                                    <img class="img" src="@navItem.Icon" />
                                    <span class="bi nav_text" aria-hidden="true">@navItem.Text</span> 
                                </NavLink>
                            </li>
                        }
                    </ul>
                    <form class="d-flex nav-link">
                        <div class="box_border_radius me-2 search-bar">
                            <input class="form-control mr-sm-2 " type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success " type="submet"></button>
                        </div>
                        <button class="btn but_laung ms-2 " type="menu" ></button>
                
                    </form>
                
                </div>
            </div>
        </div>
    </nav>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
@code {
    // تعريف قائمة العناصر
     private List<NavItem> NavItems = new List<NavItem>
    {
        new NavItem { Text = "Home", Href = "/", Icon = "nav_home-icon.svg" },
        new NavItem { Text = "About", Href = "/About_Us", Icon = "nav-about-icon.svg" },
        new NavItem { Text = "Products", Href = "/Products", Icon = "nav-Products-icon.svg" },
        new NavItem { Text = "Services", Href = "/Services", Icon = "nav-services-icon.svg" },
        new NavItem { Text = "Projects", Href = "/projects", Icon = "nav-projects-icon.svg" },
        new NavItem { Text = "News", Href = "/news", Icon = "nav-news-icon.svg" },
        new NavItem { Text = "Contact us", Href = "/Contact_Us", Icon = "nav-contact-icon.svg" },
    };

    // العنصر النشط
    private NavItem? ActiveNavItem { get; set; }

    protected override void OnInitialized()
    {
        // تحديد العنصر الافتراضي عند التحميل الأول
        if(ActiveNavItem == null)
            ActiveNavItem = NavItems.First();
    }
    private void SetActive(NavItem clickedItem)
    {
        ActiveNavItem = clickedItem;
    }

    private bool IsActive(string href)
    {
        return Navigation.Uri.EndsWith(href, StringComparison.OrdinalIgnoreCase);
    }
    // تعريف كائن NavItem
    
}


