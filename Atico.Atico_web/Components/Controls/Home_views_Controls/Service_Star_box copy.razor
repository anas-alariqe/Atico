<style>
  .background-item{
    width: 100%;
    height: 100%;
    object-fit: fill;
    position: absolute;
    display: block;
  }
  .background-item img{
    width: 100%;
    height: auto;
    object-fit: cover;
    filter: brightness(50%); /* Darken background for contrast */
  }
   .text-item {
    justify-self: flex-start;
    padding-left : 2rem !important;
    text-align: justify;
    align-items: center;
    color: #fff;
    z-index: 1; /* Make sure itâ€™s on top */
  }
  .text-item  h3{
    text-align: justify;
    text-align-last: start ;
    font-size: large  !important;
    margin-bottom: 2rem !important;
    border-left: solid 0.5rem;
    padding: 1rem;
    border-color: #EF1C23 ;
    color: #FFFFFF;
  }
</style>
<div class="@Style  background-item">
        <img role="@Role" src="@ImgPath" alt="Gas Station" />
</div>
<!-- Overlay Content -->
<div class="@Style text-item ">
    <h3 role="@Role" >@Name</h3>
    <p role="@Role">@Description</p>
</div>


@code{
    [Parameter]
    public int Id {get; set;}
    [Parameter]
    public string Name {get; set;} ="";
    [Parameter]
    public string Description {get; set;}="";
    [Parameter]
    public string ImgPath {get; set;}="";
    [Parameter]
    public string Role {get; set;} ="";
    [Parameter]
    public string Style {get; set;} ="";

}